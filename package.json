{
  "name": "@xsin/xboard-monorepo",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.12.1",
  "description": "The X Dashboard Framework",
  "author": {
    "name": "XSIN STUDIO"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xsin/xboard"
  },
  "keywords": [
    "Dashboard",
    "XBoard",
    "Admin UI",
    "Dashboard Framework"
  ],
  "scripts": {
    "taze": "taze minor -wIr",
    "dev": "concurrently \"pnpm run pkg:dev\" \"pnpm run server:dev\"",
    "test": "concurrently \"pnpm run pkg:test\" \"pnpm run server:test\"",
    "test:cov": "concurrently \"pnpm run pkg:test:cov\" \"pnpm run server:test:cov\"",
    "server:build": "pnpm -F @xsin/xboard-server run build",
    "server:start": "pnpm -F @xsin/xboard-server run start",
    "server:dev": "pnpm -F @xsin/xboard-server run start:dev",
    "server:debug": "pnpm -F @xsin/xboard-server run start:debug",
    "server:prod": "pnpm -F @xsin/xboard-server run prod",
    "server:test": "pnpm -F @xsin/xboard-server run test",
    "server:test:cov": "pnpm -F @xsin/xboard-server run test:cov",
    "pkg:dev": "pnpm -r --filter=./packages/* --parallel run watch",
    "pkg:build": "rimraf packages/*/dist --glob && esno scripts/copyfiles.ts && pnpm -r --filter=./packages/* run build && pnpm -r run build-post && esno scripts/postbuild.ts",
    "pkg:stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "pkg:test": "pnpm -r --filter=./packages/* --parallel run test",
    "pkg:test:cov": "pnpm -r --filter=./packages/* --parallel run test:cov",
    "db:gen": "pnpm -F @xsin/xboard run db:gen",
    "release": "bumpp -r",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-socket.io": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.4",
    "@prisma/client": "^5.20.0",
    "@supabase/supabase-js": "^2.45.4",
    "@xsin/xboard": "workspace:*",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.5",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "radash": "^12.1.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@swc/core": "^1.7.35",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.2",
    "bumpp": "^9.7.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "esno": "^4.8.0",
    "fast-glob": "^3.3.2",
    "globals": "^15.11.0",
    "lint-staged": "^15.2.10",
    "npm-watch": "^0.13.0",
    "pnpm": "^9.12.1",
    "prisma": "^5.20.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "taze": "^0.17.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{mjs, css, js, ts, tsx}": "pnpm lint:fix"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  }
}
