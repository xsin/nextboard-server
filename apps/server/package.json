{
  "name": "@nextboard/server",
  "version": "0.0.1",
  "private": true,
  "description": "Server for the NextBoard Framework",
  "author": {
    "name": "XSIN STUDIO",
    "url": "https://xsin.work"
  },
  "license": "UNLICENSED",
  "keywords": [
    "nestjs",
    "prisma",
    "nextboard"
  ],
  "scripts": {
    "build": "nest build && ts-node scripts/copyfiles.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:gen": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prod": "node dist/main",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.2",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.2",
    "@nestjs/swagger": "^7.4.1",
    "@nextboard/common": "workspace:*",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "juice": "^11.0.0",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "radash": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.2",
    "@swc/core": "^1.7.26",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "npm-watch": "^0.13.0",
    "prisma": "^5.19.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "unplugin-swc": "^1.5.1"
  }
}
