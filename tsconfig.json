{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "paths": {
      "@xsin/nextboard-common": [
        "./packages/common/src"
      ],
      "@xsin/nextboard-common/*": [
        "./packages/common/src/*"
      ]
    },
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "test"
  ]
}
